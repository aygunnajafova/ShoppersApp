<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.DetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glLeftDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glRightDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <ImageView
            android:id="@+id/ivDetails"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tvNameDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/glLeftDetails"
            app:layout_constraintTop_toBottomOf="@+id/ivDetails"
            android:layout_marginTop="25dp"
            android:text="Adidas Shoe"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tvPriceDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/tvNameDetails"
            app:layout_constraintTop_toBottomOf="@+id/tvNameDetails"
            android:text="Rs. 20000.00"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/btnDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/glLeftDetails"
            app:layout_constraintRight_toLeftOf="@+id/glRightDetails"
            app:layout_constraintTop_toBottomOf="@+id/tvPriceDetails"
            android:layout_marginTop="35dp"
            android:text="Add to Cart"
            style="@style/MyButton"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:id="@+id/tvMoreDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/glLeftDetails"
            app:layout_constraintTop_toBottomOf="@+id/btnDetails"
            android:layout_marginTop="30dp"
            android:text="More Details"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/tvDescriptionDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/glLeftDetails"
            app:layout_constraintRight_toLeftOf="@+id/glRightDetails"
            app:layout_constraintTop_toBottomOf="@+id/tvMoreDetails"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:text="Gear up with the wkehfhwfuhwuleffheirihghrhhgihrighighgrkgojgrojporjgioureoighioghirhg
        rijgihgiherighoigrhirhegioehrgihqirhgiohrgiojaslwfhwekfhiwhfioijruheguhierhghgiohghergih"
            android:textColor="@color/dark_gray" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

    <!--Scroll bar-->